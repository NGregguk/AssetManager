@model asset_manager.Models.Category
@{
    ViewData["Title"] = "Delete category";
}

<section class="page-header">
    <div>
        <h1>Delete category</h1>
        <p class="muted">This cannot be undone.</p>
    </div>
    <div class="header-actions">
        <a class="button ghost" asp-area="Admin" asp-controller="Categories" asp-action="Index">Back to categories</a>
    </div>
</section>

<div class="panel danger-panel">
    <div class="panel-header">
        <h2>@Model.Name</h2>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="button danger">Delete</button>
            <a class="button ghost" asp-area="Admin" asp-controller="Categories" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
