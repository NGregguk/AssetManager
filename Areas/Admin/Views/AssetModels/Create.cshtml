@model asset_manager.Models.AssetModel
@{
    ViewData["Title"] = "Create model";
}

<section class="page-header">
    <div>
        <h1>Create model</h1>
        <p class="muted">Add a reusable asset template.</p>
    </div>
    <div class="header-actions">
        <a class="button ghost" asp-action="Index">Back to models</a>
    </div>
</section>

<div class="panel">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <partial name="_AssetModelForm" model="Model" />
        <div class="form-actions">
            <button type="submit" class="button">Save</button>
            <a class="button ghost" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
