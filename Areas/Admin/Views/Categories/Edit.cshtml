@model asset_manager.Models.Category
@{
    ViewData["Title"] = "Edit category";
}

<section class="page-header">
    <div>
        <h1>Edit category</h1>
        <p class="muted">@Model.Name</p>
    </div>
    <div class="header-actions">
        <a class="button ghost" asp-area="Admin" asp-controller="Categories" asp-action="Index">Back to categories</a>
    </div>
</section>

<div class="panel">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-grid">
            <div class="form-field">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="button">Save</button>
            <a class="button ghost" asp-area="Admin" asp-controller="Categories" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
