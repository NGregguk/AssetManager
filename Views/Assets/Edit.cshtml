@model Asset
@{
    ViewData["Title"] = "Edit asset";
    var assignedTo = ViewData["AssignedTo"] as string ?? string.Empty;
    var expectedReturnDate = ViewData["ExpectedReturnDate"] as string ?? string.Empty;
    var returnedDate = ViewData["ReturnedDate"] as string ?? string.Empty;
}

<section class="page-header">
    <div>
        <h1>Edit asset</h1>
        <p class="muted">Update the asset record and location data.</p>
    </div>
    <div class="header-actions">
        <a class="button ghost" asp-action="Details" asp-route-id="@Model.Id">Back to details</a>
    </div>
</section>

<div class="panel">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <partial name="_AssetForm" model="Model" />
        @if (User.IsInRole("Admin"))
        {
            <h2>Assignment</h2>
            <p class="muted">Set who has the asset, or clear it to mark returned.</p>
            <div class="form-grid">
            <div class="form-field">
                <label for="assignedTo">Assigned to</label>
                <input id="assignedTo" name="assignedTo" class="form-control" value="@assignedTo" />
            </div>
            <div class="form-field">
                <label for="expectedReturnDate">Expected return date</label>
                <input id="expectedReturnDate" name="expectedReturnDate" type="date" class="form-control" value="@expectedReturnDate" />
            </div>
            <div class="form-field">
                <label for="returnedDate">Returned date</label>
                <input id="returnedDate" name="returnedDate" type="date" class="form-control" value="@returnedDate" />
            </div>
            </div>
        }
        <div class="form-actions">
            <button type="submit" class="button">Save changes</button>
            <a class="button ghost" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
