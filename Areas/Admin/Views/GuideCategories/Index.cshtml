@model IReadOnlyList<asset_manager.Models.GuideCategory>
@{
    ViewData["Title"] = "Guide categories";
}

<section class="page-header">
    <div>
        <h1>Guide categories</h1>
        <p class="muted">Group guides by area (firewalls, servers, daily support, and more).</p>
    </div>
    <div class="header-actions">
        <a class="button ghost" asp-area="Admin" asp-controller="Home" asp-action="Index">Back to admin</a>
        <a class="button ghost" asp-area="Admin" asp-controller="Guides" asp-action="Index">Manage guides</a>
        <a class="button" asp-area="Admin" asp-controller="GuideCategories" asp-action="Create">Add category</a>
    </div>
</section>

<div class="panel">
    <div class="table-wrap">
        <table class="table table-borderless align-middle">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Description</th>
                    <th class="text-center">Guides</th>
                    <th class="text-center">Order</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="empty-state">No guide categories yet.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="asset-name">@item.Name</td>
                        <td class="muted">@item.Description</td>
                        <td class="text-center">@item.Guides.Count</td>
                        <td class="text-center">@item.SortOrder</td>
                        <td class="text-end">
                            <a class="button ghost small" asp-area="Admin" asp-controller="GuideCategories" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="button danger small" asp-area="Admin" asp-controller="GuideCategories" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
