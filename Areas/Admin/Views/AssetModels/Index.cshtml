@model IReadOnlyList<asset_manager.Models.AssetModel>
@{
    ViewData["Title"] = "Asset models";
}

<section class="page-header">
    <div>
        <h1>Asset models</h1>
        <p class="muted">Define reusable templates for common devices.</p>
    </div>
    <div class="header-actions">
        <a class="button" asp-action="Create">Add model</a>
    </div>
</section>

<div class="panel">
    <div class="table-wrap">
        <table class="table table-borderless align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Manufacturer</th>
                    <th>Model</th>
                    <th>OS</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="empty-state">No models yet.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="asset-name">@item.Name</td>
                        <td>@(item.Manufacturer ?? "-")</td>
                        <td>@(item.ModelNumber ?? "-")</td>
                        <td>@(item.OperatingSystem ?? "-")</td>
                        <td class="text-end">
                            <a class="button ghost small" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="button danger small" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
