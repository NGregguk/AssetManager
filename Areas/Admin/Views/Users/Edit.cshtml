@model asset_manager.ViewModels.AdminUserEditViewModel
@{
    ViewData["Title"] = "Edit user role";
}

<section class="page-header">
    <div>
        <h1>Edit role</h1>
        <p class="muted">@Model.Email</p>
    </div>
    <div class="header-actions">
        <a class="button ghost" asp-area="Admin" asp-controller="Users" asp-action="Index">Back to users</a>
    </div>
</section>

<div class="panel">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-grid">
            <div class="form-field">
                <label asp-for="SelectedRole">Role</label>
                <select asp-for="SelectedRole" class="form-select" asp-items="new SelectList(Model.AvailableRoles)">
                </select>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="button">Save</button>
            <a class="button ghost" asp-area="Admin" asp-controller="Users" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
