@model IReadOnlyList<Asset>
@{
    ViewData["Title"] = "Assets";
}

<section class="page-header">
    <div>
        <h1>Assets</h1>
        <p class="muted">Track equipment, assignments, and lifecycle status.</p>
    </div>
    <div class="header-actions">
        <a class="button" asp-action="Create">Add asset</a>
        <a class="button ghost" asp-action="Upload">Upload CSV</a>
    </div>
</section>

<div class="panel">
    <div class="table-wrap">
        <table class="table table-borderless align-middle">
            <thead>
                <tr>
                    <th>Asset</th>
                    <th>Category</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="empty-state">No assets in the register yet.</td>
                </tr>
            }
            else
            {
                foreach (var asset in Model)
                {
                    <tr>
                        <td>
                            <div class="asset-name">@asset.Name</div>
                            <div class="muted">@(string.IsNullOrWhiteSpace(asset.Tag) ? "No tag" : asset.Tag)</div>
                        </td>
                        <td>@(asset.Category?.Name ?? "Uncategorised")</td>
                        <td>@(asset.Location?.Name ?? "Unassigned")</td>
                        <td><span class="pill">@asset.Status</span></td>
                        <td class="text-end">
                            <a class="button ghost small" asp-action="Details" asp-route-id="@asset.Id">Details</a>
                            <a class="button ghost small" asp-action="Edit" asp-route-id="@asset.Id">Edit</a>
                            <a class="button danger small" asp-action="Delete" asp-route-id="@asset.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
