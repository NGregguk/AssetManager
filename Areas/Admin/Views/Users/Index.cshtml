@model IReadOnlyList<asset_manager.ViewModels.AdminUserViewModel>
@{
    ViewData["Title"] = "Users";
}

<section class="page-header">
    <div>
        <h1>Users</h1>
        <p class="muted">Assign Admin or User roles.</p>
    </div>
    <div class="header-actions">
        <a class="button ghost" asp-area="Admin" asp-controller="Home" asp-action="Index">Back to admin</a>
    </div>
</section>

<div class="panel">
    <div class="table-wrap">
        <table class="table table-borderless align-middle">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="3" class="empty-state">No users found.</td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td><span class="pill">@user.Role</span></td>
                        <td class="text-end">
                            <a class="button ghost small" asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit role</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
